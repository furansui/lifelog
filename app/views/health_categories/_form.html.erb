<%= form_for @health_category do |f| %>
  <% if @health_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@health_category.errors.count, "error") %>:</h2>
      <ul>
	<% @health_category.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
