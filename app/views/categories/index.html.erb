<h1>Categories</h1>

<p>
<%= link_to 'New category', new_category_path %>
<%= link_to 'Home', root_path %>
<%= link_to "csv", categories_path(format: "csv") %>
</p>

<% @categories.each do |category| %>
  
  <span style="display: inline; background-color: <%= category.color %>;">
  <%= category.name %> <%= category.shortcut %> <%= category.notes %> 
  </span>
  <%= link_to 'Show', category_path(category) %> 
  <%= link_to 'Edit', edit_category_path(category) %> 
  <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
</br>
<% end %>

<h2>Import CSV</h2>
<%= form_tag import_categories_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

