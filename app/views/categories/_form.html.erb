<%= form_for @category do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %>:</h2>
      <ul>
	<% @category.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :shortcut %>
    <%= f.text_field :shortcut %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
  </p>
  <p>
    <%= f.label :parent %>
    <%= f.select :parent_id, options_for_select(Category.all.collect{|c|[c.name, c.id]}.insert(0,"none")) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
